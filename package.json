{
  "name": "divination-repository",
  "version": "0.0.0",
  "repository": "https://github.com/SlashNephy/divination-repository",
  "license": "MIT",
  "author": "SlashNephy <spica@starry.blue>",
  "type": "module",
  "workspaces": [
    "functions"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "format": "concurrently -m 1 -n format: 'yarn:format:*'",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "concurrently -n lint: 'yarn:lint:*'",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "preview": "vite preview"
  },
  "eslintConfig": {
    "extends": [
      "@slashnephy/eslint-config"
    ],
    "overrides": [
      {
        "files": "functions/**/*.ts",
        "parserOptions": {
          "project": "./functions/tsconfig.json"
        }
      },
      {
        "files": "src/**/*.{ts,tsx}",
        "parserOptions": {
          "project": "./tsconfig.json"
        }
      },
      {
        "files": "vite.config.ts",
        "parserOptions": {
          "project": "./tsconfig.node.json"
        }
      }
    ]
  },
  "dependencies": {
    "@mantine/core": "7.14.2",
    "@mantine/hooks": "7.14.2",
    "@tabler/icons-react": "2.47.0",
    "i18next": "23.16.8",
    "i18next-browser-languagedetector": "7.2.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "13.5.0",
    "swr": "2.2.5"
  },
  "devDependencies": {
    "@slashnephy/eslint-config": "2.3.142",
    "@slashnephy/prettier-config": "1.0.73",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react-swc": "3.7.1",
    "concurrently": "9.1.0",
    "eslint": "8.57.1",
    "postcss": "8.4.49",
    "postcss-preset-mantine": "1.17.0",
    "postcss-simple-vars": "7.0.1",
    "prettier": "3.3.3",
    "tailwindcss": "3.4.15",
    "typescript": "5.7.2",
    "vite": "5.4.11"
  },
  "packageManager": "yarn@4.5.2",
  "engines": {
    "node": ">=20"
  }
}
