{
  "name": "divination-repository",
  "version": "0.0.0",
  "repository": "https://github.com/SlashNephy/divination-repository",
  "license": "MIT",
  "author": "SlashNephy <spica@starry.blue>",
  "type": "module",
  "workspaces": [
    "functions"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "format": "concurrently -m 1 -n format: 'yarn:format:*'",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "concurrently -n lint: 'yarn:lint:*'",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "preview": "vite preview"
  },
  "eslintConfig": {
    "extends": [
      "@slashnephy/eslint-config"
    ],
    "overrides": [
      {
        "files": "functions/**/*.ts",
        "parserOptions": {
          "project": "./functions/tsconfig.json"
        }
      },
      {
        "files": "src/**/*.{ts,tsx}",
        "parserOptions": {
          "project": "./tsconfig.json"
        }
      },
      {
        "files": "vite.config.ts",
        "parserOptions": {
          "project": "./tsconfig.node.json"
        }
      }
    ]
  },
  "dependencies": {
    "@nextui-org/react": "2.2.10",
    "@tabler/icons-react": "2.47.0",
    "framer-motion": "10.18.0",
    "i18next": "23.8.3",
    "i18next-browser-languagedetector": "7.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "13.5.0",
    "swr": "2.2.5"
  },
  "devDependencies": {
    "@slashnephy/eslint-config": "2.3.14",
    "@slashnephy/prettier-config": "1.0.73",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "@vitejs/plugin-react-swc": "3.6.0",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "prettier": "3.2.5",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vite": "5.1.3"
  },
  "packageManager": "yarn@4.1.0",
  "engines": {
    "node": ">=20"
  }
}

